<table class="table table-striped table-hover">
  <thead>
    <th>幣別</th>
    <th>前次匯率</th>
    <th></th>
    <th>目前匯率 Updated at <%= @timestamp %></th>
  </thead>
  <% @currencies.each do |currency| %>
  <tr>
    <td><%= currency.name %></td>
    <td><%= currency.previous_rate.current_rate %></td>
    <td> => </td>
    <td><%= currency.latest_rate.current_rate %></td>
  </tr>
  <% end %>
</table>
<hr>
<%= link_to("Refresh rates", rates_refresh_path, class: "btn btn-primary btn-lg pull-right") %>